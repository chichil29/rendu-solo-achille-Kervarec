{% extends 'base.html.twig' %}

{% block title %}Gestion Proprietaires{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Les proprietaires</h1>
        <table class="table table-striped">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Actions</th>
            </tr>
            {% for p in proprietaires %}
                <tr>
                    <td>{{p.nom}}</td>
                    <td>{{p.prenom}}</td>
                    <td>
                        <a href="{{path("app_proprietaire_modifier", {"id": p.id})}}" class="btn btn-primary">modifier</a>
                        <a href="{{path("app_proprietaire_supprimer", {"id": p.id})}}" class="btn btn-danger">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a href="{{path("app_proprietaire_ajouter")}}" class="btn btn-success">Ajouter un propri√©taire</a>
    </div>
{% endblock %}
